<div class="float-container">
  <h1>Please fill in your booking details:</h1>

<br>

  <%= simple_form_for [@car, @booking] do |f| %>
    <%= f.input :start_date, as: :date, html5: true %>
    <%= f.input :end_date, as: :date, html5: true %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :car_id %>
    <%= f.submit "Book now", class: "btn btn-flat" %> <%= link_to 'Go back', car_path(@car), class: 'btn btn-flat' %>
  <% end %>
</div>

