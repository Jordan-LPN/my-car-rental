    <div>
      <div class="container">
         <div cover mb-4 d-flex align-items-center justify-content-center>
           <h1>More Information</h1>

         </div>
          <div class="d-flex row justify-content-center">
            <div class="col-lg-4">
               <div class="card bg-light my-3">
                    <div class="card-body d-flex align-items-center">
                      <h2 class="card-title fw-bolder"> <%= @car.brand %> <%= @car.model %> </h2>
                        </div>
                          <ul class="list-group list-group-flush">
                           <li class="list-group-item"> Brand: <%= @car.brand %>
                           <li class="list-group-item">Model: <%= @car.model %></li>
                           <li class="list-group-item"> Color: <%=@car.color %></li>
                           <li class="list-group-item"> Year: <%= @car.year %></li>
                           <li class="list-group-item"> Price: <%= @car.price %></li>
                          </ul>

                </div>
            </div>
          </div>

        <%= link_to 'Back',:back, class: 'btn btn-gradient' %>
        <%= link_to 'Create Review', new_car_review_path(@car), class: 'btn btn-gradient'%>
        <ul>
        <% @reviews.each do |review| %>
        <li> <%= review.feedback %></li>
        <% end %>
        </ul>
      </div>
    </div>
